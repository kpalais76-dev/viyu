/* pages/gear/setup/list/index.wxss */
page { background: #F4F6F9; padding: 30rpx; box-sizing: border-box;}
.header { margin-bottom: 40rpx; }
.title { font-size: 32rpx; font-weight: 900; color: #1A1D26; letter-spacing: 2rpx; }
.sub { font-size: 24rpx; color: #8C96A5; }

.setup-item {
  background: #FFF; padding: 30rpx; border-radius: 16rpx; margin-bottom: 24rpx;
  position: relative; box-shadow: 0 4rpx 10rpx rgba(163,177,198,0.1);
}
.setup-item:active { transform: scale(0.99); }

.item-head { display: flex; align-items: center; margin-bottom: 12rpx; }
.tag { 
  font-size: 20rpx; background: #1A1D26; color: #FFF; 
  padding: 4rpx 10rpx; border-radius: 6rpx; margin-right: 16rpx; 
}
.name { font-size: 30rpx; font-weight: bold; color: #333; }
.item-detail { font-size: 22rpx; color: #999; }

.del-btn {
  position: absolute; top: 0; right: 0; padding: 20rpx 30rpx;
  color: #CCC; font-size: 40rpx; line-height: 1;
}

.add-bar {
  margin-top: 40rpx; background: #E3F2FD; color: #2962FF;
  text-align: center; padding: 30rpx; border-radius: 16rpx;
  font-weight: 900; font-size: 28rpx; border: 2rpx dashed #2962FF;
}