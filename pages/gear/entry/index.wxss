/* pages/gear/entry/index.wxss */
page { background: #F4F6F9; padding-bottom: 120rpx; }

.gateway-container { padding: 40rpx 30rpx; }

/* Header */
.gateway-header { margin-bottom: 50rpx; }
.title { font-size: 40rpx; font-weight: 900; color: #1A1D26; letter-spacing: 1rpx; margin-bottom: 8rpx; }
.subtitle { font-size: 24rpx; color: #8C96A5; font-weight: bold; }

/* Group Section */
.group-section { margin-bottom: 50rpx; }
.group-head { display: flex; align-items: baseline; margin-bottom: 24rpx; padding-left: 8rpx; }
.gh-name { font-size: 30rpx; font-weight: 900; color: #1A1D26; margin-right: 16rpx; }
.gh-desc { font-size: 20rpx; color: #B0B8C3; font-weight: bold; text-transform: uppercase; }

/* Grid System */
.grid-body {
  display: grid;
  gap: 24rpx;
}
.col-1 { grid-template-columns: 1fr; }
.col-2 { grid-template-columns: repeat(2, 1fr); }
.col-3 { grid-template-columns: repeat(3, 1fr); }

/* Card Style */
.grid-card {
  background: #FFF; border-radius: 20rpx;
  display: flex; flex-direction: column; align-items: center; justify-content: center;
  padding: 30rpx; position: relative; overflow: hidden;
  box-shadow: 0 4rpx 15rpx rgba(163, 177, 198, 0.1);
  transition: all 0.1s;
  min-height: 160rpx; /* 默认高度 */
}

/* 点击反馈 */
.grid-card:active { background: #2962FF; transform: scale(0.98); }
.grid-card:active .card-name, 
.grid-card:active .card-en, 
.grid-card:active .card-icon { color: #FFF; }

/* Core Large Card */
.card-lg {
  min-height: 220rpx; /* 大卡片更高 */
  border: 2rpx solid rgba(41, 98, 255, 0.1); /* 微蓝边框 */
}

.card-icon { font-size: 48rpx; margin-bottom: 16rpx; }
.card-name { font-size: 28rpx; font-weight: 800; color: #333; margin-bottom: 6rpx; }
.card-en { font-size: 18rpx; font-weight: 700; color: #CCC; text-transform: uppercase; }

/* 装饰角标 */
.corner {
  position: absolute; bottom: 0; right: 0;
  width: 0; height: 0;
  border-bottom: 20rpx solid #F0F2F5;
  border-left: 20rpx solid transparent;
}

/* 底部扫码条 */
.scan-bar {
  position: fixed; bottom: 40rpx; left: 30rpx; right: 30rpx;
  height: 100rpx; background: #1A1D26; border-radius: 50rpx;
  display: flex; align-items: center; justify-content: center;
  color: #FFF; font-weight: bold; font-size: 28rpx;
  box-shadow: 0 10rpx 30rpx rgba(26, 29, 38, 0.3);
  z-index: 100;
}
.scan-icon { font-size: 36rpx; margin-right: 16rpx; }