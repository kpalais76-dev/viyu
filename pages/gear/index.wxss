/* pages/gear/index.wxss */
page { background: #F4F6F9; height: 100vh; display: flex; flex-direction: column; }

.arsenal-container { height: 100%; display: flex; flex-direction: column; }

/* 资产 HUD */
.asset-hud {
  background: #1A1D26; padding: 30rpx 40rpx; margin: 30rpx;
  border-radius: 20rpx; color: #FFF; box-shadow: 0 10rpx 20rpx rgba(26,29,38,0.3);
  flex-shrink: 0;
}
.asset-row { display: flex; justify-content: space-between; align-items: flex-end; margin-bottom: 10rpx; }
.total-val { display: flex; align-items: baseline; color: #FFD700; /* 金色 */ }
.currency { font-size: 24rpx; font-weight: bold; margin-right: 4rpx; }
.amount { font-size: 56rpx; font-weight: 900; font-family: 'DIN', sans-serif; letter-spacing: -1rpx; }
.total-count { text-align: right; }
.num { font-size: 40rpx; font-weight: 900; display: block; line-height: 1; }
.lbl { font-size: 16rpx; opacity: 0.6; font-weight: bold; }
.hud-label { font-size: 18rpx; color: rgba(255,255,255,0.4); font-weight: bold; letter-spacing: 1rpx; }

/* Tabs */
.category-tabs {
  display: flex; padding: 0 30rpx; margin-bottom: 20rpx; flex-shrink: 0;
}
.tab-item {
  flex: 1; text-align: center; padding: 20rpx 0;
  color: #8C96A5; border-bottom: 4rpx solid transparent;
  display: flex; flex-direction: column; align-items: center;
  transition: all 0.2s;
}
.tab-item.active { color: #2962FF; border-bottom-color: #2962FF; }
.tab-cn { font-size: 28rpx; font-weight: 900; }
.tab-en { font-size: 16rpx; font-weight: bold; letter-spacing: 1rpx; margin-top: 4rpx; }

/* 列表 */
.gear-list { flex: 1; padding: 0 30rpx; box-sizing: border-box; }

.gear-item {
  background: #FFF; padding: 24rpx; margin-bottom: 20rpx;
  border-radius: 16rpx; display: flex; align-items: center;
  box-shadow: 0 4rpx 10rpx rgba(163,177,198,0.1);
}
.item-icon { 
  width: 80rpx; height: 80rpx; background: #F4F6F9; border-radius: 12rpx;
  display: flex; align-items: center; justify-content: center; font-size: 40rpx;
  margin-right: 24rpx; flex-shrink: 0;
}
.item-info { flex: 1; display: flex; flex-direction: column; justify-content: center; }
.item-head { margin-bottom: 8rpx; }
.brand { font-size: 28rpx; font-weight: 900; color: #1A1D26; margin-right: 12rpx; }
.model { font-size: 28rpx; color: #333; }
.item-sub { display: flex; align-items: center; }
.tag { font-size: 18rpx; background: #E3F2FD; color: #1565C0; padding: 2rpx 8rpx; border-radius: 6rpx; margin-right: 12rpx; font-weight: bold; }
.specs { font-size: 22rpx; color: #9AA5B1; }
.status-dot { width: 12rpx; height: 12rpx; border-radius: 50%; background: #CCC; }
.status-dot.active { background: #00E676; }

/* FAB 按钮 */
.fab-add {
  position: absolute; bottom: 60rpx; right: 40rpx;
  width: 110rpx; height: 110rpx; border-radius: 50%;
  background: #2962FF; box-shadow: 0 10rpx 30rpx rgba(41,98,255,0.4);
  display: flex; align-items: center; justify-content: center; z-index: 100;
}
.plus { font-size: 60rpx; color: #FFF; font-weight: 300; margin-top: -8rpx; }

/* Empty State */
.empty-state {
  display: flex; flex-direction: column; align-items: center; justify-content: center;
  margin-top: 100rpx;
}
.empty-icon { font-size: 80rpx; margin-bottom: 20rpx; opacity: 0.5; }
.empty-txt { font-size: 24rpx; font-weight: 900; color: #B0B8C3; letter-spacing: 2rpx; margin-bottom: 40rpx; }
.add-btn { 
  background: #FFF; border: 2rpx solid #2962FF; color: #2962FF; 
  padding: 16rpx 40rpx; border-radius: 40rpx; font-size: 26rpx; font-weight: bold; 
}