/* miniprogram/pages/knowledge/index/index.wxss */
page { background: #F4F6F9; height: 100vh; display: flex; flex-direction: column; }

/* 修复：给 Tabs 一个明确的高度和布局 */
.tabs { 
  background: #FFF; 
  height: 90rpx; 
  display: flex; 
  align-items: center; 
  box-shadow: 0 4rpx 10rpx rgba(0,0,0,0.05); 
  z-index: 10;
  width: 100%; /* 占满宽度 */
}

/* 修复：每个 Tab 强制占 50% */
.tab-item { 
  flex: 1; 
  text-align: center; 
  height: 90rpx; 
  line-height: 90rpx; 
  font-size: 30rpx; 
  color: #999; 
  font-weight: bold; 
  position: relative; 
}

.tab-item.active { 
  color: #2962FF; 
  font-size: 32rpx; 
}

/* 底部蓝色指示条 */
.tab-item .line { 
  position: absolute; 
  bottom: 0; 
  left: 50%; 
  transform: translateX(-50%); /* 居中 */
  width: 60rpx; 
  height: 6rpx; 
  background: transparent; 
  border-radius: 4rpx; 
}
.tab-item.active .line { 
  background: #2962FF; 
}

/* 列表内容区 */
.list-area { 
  flex: 1; 
  padding: 30rpx; 
  box-sizing: border-box; 
  width: 100%;
}

/* 卡片样式 */
.method-card { 
  background: #FFF; padding: 30rpx; border-radius: 16rpx; margin-bottom: 24rpx; 
}
.card-head { display: flex; justify-content: space-between; align-items: center; margin-bottom: 16rpx; }
.title { font-size: 32rpx; font-weight: 900; color: #333; }
.tag { background: #E3F2FD; color: #2962FF; font-size: 22rpx; padding: 6rpx 12rpx; border-radius: 8rpx; }
.desc { font-size: 28rpx; color: #666; margin-bottom: 20rpx; display: block; }
.meta { font-size: 24rpx; color: #999; border-top: 2rpx dashed #eee; padding-top: 20rpx; display: block; }

.skill-card { 
  background: #FFF; padding: 30rpx; border-radius: 16rpx; margin-bottom: 24rpx; 
  display: flex; align-items: center; 
}
.skill-icon { font-size: 40rpx; margin-right: 20rpx; }
.skill-info { flex: 1; }
.arrow { color: #CCC; }