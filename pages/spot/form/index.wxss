/* pages/spot/form/index.wxss */
page { background: #F4F6F9; padding: 30rpx; box-sizing: border-box; }
.container { padding-bottom: 100rpx; }

.card {
  background: #FFF; border-radius: 16rpx; padding: 30rpx; margin-bottom: 24rpx;
  box-shadow: 0 4rpx 10rpx rgba(0,0,0,0.05);
}
.card-head { font-size: 24rpx; font-weight: 900; color: #8C96A5; margin-bottom: 24rpx; letter-spacing: 1rpx; }

/* 地图选择器 */
.map-picker {
  display: flex; align-items: center; background: #F8F9FB; padding: 24rpx;
  border-radius: 12rpx; margin-bottom: 24rpx; border: 2rpx solid #E0E0E0;
}
.map-icon { font-size: 40rpx; margin-right: 20rpx; }
.map-info { flex: 1; display: flex; flex-direction: column; }
.map-title { font-size: 30rpx; font-weight: bold; color: #333; }
.map-title.placeholder { color: #2962FF; }
.map-sub { font-size: 22rpx; color: #999; margin-top: 4rpx; }
.arrow { color: #CCC; font-weight: bold; }

/* 表单通用 */
.form-row { margin-bottom: 24rpx; }
.row-2-col { display: flex; gap: 24rpx; }
.row-2-col .form-row { flex: 1; }
.label { font-size: 26rpx; font-weight: bold; color: #333; margin-bottom: 8rpx; }
.input, .picker-txt {
  background: #F7F8FA; height: 80rpx; line-height: 80rpx; border-radius: 8rpx;
  padding: 0 20rpx; font-size: 28rpx; font-weight: bold; color: #333;
}
.picker-txt.ph { color: #CCC; font-weight: normal; }

.submit-btn {
  background: #1A1D26; color: #FFF; font-weight: 900; height: 90rpx; line-height: 90rpx;
  border-radius: 45rpx; margin-top: 40rpx; box-shadow: 0 10rpx 20rpx rgba(26,29,38,0.2);
}