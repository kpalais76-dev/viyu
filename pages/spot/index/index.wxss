/* pages/spot/index/index.wxss */
page { background: #F4F6F9; height: 100vh; }
.container { padding: 30rpx; height: 100%; display: flex; flex-direction: column; box-sizing: border-box; }
.header { margin-bottom: 30rpx; }
.title { font-size: 32rpx; font-weight: 900; }
.sub { font-size: 24rpx; color: #8C96A5; }
.list-area { flex: 1; }
.spot-card { background: #FFF; border-radius: 16rpx; padding: 30rpx; margin-bottom: 24rpx; box-shadow: 0 4rpx 10rpx rgba(0,0,0,0.05); }
.card-top { display: flex; justify-content: space-between; align-items: center; margin-bottom: 16rpx; }
.spot-name { font-size: 30rpx; font-weight: bold; }
.spot-type { background: #E3F2FD; color: #2962FF; font-size: 20rpx; padding: 4rpx 10rpx; border-radius: 6rpx; font-weight: bold; }
.card-mid { font-size: 24rpx; color: #666; margin-bottom: 24rpx; }
.sep { margin: 0 10rpx; color: #CCC; }
.card-btm { border-top: 2rpx dashed #F0F0F0; padding-top: 20rpx; color: #2962FF; font-size: 24rpx; font-weight: bold; }
.fab-add { position: absolute; bottom: 60rpx; right: 40rpx; width: 100rpx; height: 100rpx; border-radius: 50%; background: #1A1D26; color: #FFF; font-size: 60rpx; display: flex; align-items: center; justify-content: center; box-shadow: 0 10rpx 30rpx rgba(0,0,0,0.4); }
.empty-tip { text-align: center; color: #CCC; margin-top: 100rpx; font-size: 24rpx; }