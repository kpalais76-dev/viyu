<view class="tab-bar">
  <view class="tab-bar-border"></view>
  
  <block wx:for="{{list}}" wx:key="index">
    <view wx:if="{{!item.isSpecial}}" class="tab-bar-item" data-path="{{item.pagePath}}" data-index="{{index}}" bindtap="switchTab">
      <view class="tab-text {{selected === index ? 'active' : ''}}" style="color: {{selected === index ? selectedColor : color}}">
        {{item.text}}
      </view>
    </view>

    <view wx:else class="tab-bar-item special-wrapper" data-path="{{item.pagePath}}" data-index="{{index}}" bindtap="switchTab">
      <view class="special-btn">
        <view class="plus-icon">+</view>
      </view>
      <view class="special-text">{{item.text}}</view>
    </view>
  </block>
</view>