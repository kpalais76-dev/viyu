/* pages/form/index.wxss */
page { background-color: #f0f2f5; padding-bottom: 100rpx; }
.container { padding: 30rpx; }

.page-title { font-size: 36rpx; font-weight: bold; color: #333; margin-bottom: 30rpx; padding-left: 10rpx; }

.card { background: #fff; border-radius: 20rpx; padding: 30rpx; margin-bottom: 24rpx; box-shadow: 0 2rpx 10rpx rgba(0,0,0,0.02); }

/* 环境卡片 */
.env-card .row { display: flex; justify-content: space-between; margin-bottom: 16rpx; font-size: 28rpx; }
.env-card .row:last-child { margin-bottom: 0; }
.env-card .label { color: #888; }
.env-card .value { font-weight: bold; color: #333; }

/* 表单通用 */
.form-item { display: flex; justify-content: space-between; align-items: center; padding: 20rpx 0; border-bottom: 1rpx solid #f9f9f9; }
.form-item:last-child { border-bottom: none; }
.label { font-size: 30rpx; color: #333; font-weight: 500; }

.picker-val { font-size: 30rpx; color: #1976D2; display: flex; align-items: center; font-weight: bold; }
.arrow { font-size: 20rpx; margin-left: 10rpx; color: #ccc; }

/* 分栏输入 */
.form-row-split { display: flex; gap: 30rpx; margin-top: 20rpx; }
.split-item { flex: 1; background: #f9f9f9; padding: 20rpx; border-radius: 12rpx; }
.split-item .label { font-size: 24rpx; color: #888; display: block; margin-bottom: 10rpx; }
.input-box { font-size: 36rpx; font-weight: bold; color: #333; height: 50rpx; }

.input-no-border { text-align: right; font-size: 30rpx; color: #333; width: 300rpx; }

/* 标签组 */
.label-block { display: block; font-size: 28rpx; color: #666; margin-bottom: 20rpx; }
.tags-container { display: flex; flex-wrap: wrap; gap: 20rpx; }
.tag { padding: 10rpx 30rpx; background: #f5f5f5; color: #666; border-radius: 30rpx; font-size: 26rpx; border: 2rpx solid transparent; transition: all 0.2s; }
.tag.active { background: #E3F2FD; color: #1976D2; border-color: #1976D2; font-weight: bold; }

/* 底部按钮 */
.footer-btn-area { margin-top: 40rpx; }
.btn-save { background: #222; color: #fff; border-radius: 50rpx; font-weight: bold; box-shadow: 0 8rpx 20rpx rgba(0,0,0,0.2); }