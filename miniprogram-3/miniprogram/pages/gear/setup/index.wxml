<view class="container">
  
  <view class="header-mini">
    <view class="header-title">{{uiConfig[mode].title}}</view>
    <view class="header-mode">{{mode === 'gear' ? 'ASSETS' : 'TACTICS'}}</view>
  </view>

  <view class="action-row">
    <view class="action-btn-main" bindtap="handleMainAction">
      <view class="icon-box">{{mode === 'gear' ? 'ğŸ“¸' : 'ğŸ“‹'}}</view>
      <view class="btn-text-group">
        <text class="btn-title">{{uiConfig[mode].mainBtn}}</text>
        <text class="btn-sub">{{uiConfig[mode].mainDesc}}</text>
      </view>
    </view>

    <view class="action-btn-sub" bindtap="handlePaste">
      <text class="sub-title">IMPORT CODE</text>
    </view>
  </view>

  <view class="search-box">
    <text class="search-icon">ğŸ”</text>
    <input 
      class="search-input" 
      placeholder="{{uiConfig[mode].searchHint}}" 
      placeholder-class="ph-style"
      confirm-type="search"
      bindconfirm="handleSearch"
    />
  </view>

  <block wx:if="{{mode === 'gear'}}">
    <view class="catalog-group" wx:for="{{gearGroups}}" wx:key="title" wx:for-index="idx">
      <view class="group-header">
        <text>{{item.en}} // {{item.title}}</text>
        <view class="line-dec"></view>
      </view>

      <view class="{{idx === 0 ? 'grid-2-col' : 'grid-3-col'}}">
        <view 
          class="{{idx === 0 ? 'item-card-lg' : 'item-card-sm'}}" 
          wx:for="{{item.list}}" 
          wx:key="key" 
          wx:for-item="gear"
          bindtap="handleSelectType" 
          data-type="{{gear.key}}"
        >
          <text class="{{idx === 0 ? 'lg-name' : 'sm-name'}}">{{gear.name}}</text>
          <text class="{{idx === 0 ? 'lg-en' : 'sm-en'}}">{{gear.key}}</text>
        </view>
      </view>
    </view>
  </block>

  <block wx:if="{{mode === 'setup'}}">
    <view class="catalog-group">
      <view class="group-header">
        <text>TACTICAL METHODS // æˆ˜æœ¯æµæ´¾</text>
        <view class="line-dec"></view>
      </view>
      <view class="method-list">
        <view class="method-item" wx:for="{{methods}}" wx:key="key" bindtap="handleManualSetup" data-key="{{item.key}}">
          <text class="m-name">{{item.name}}</text>
          <text class="m-desc">{{item.desc}}</text>
        </view>
      </view>
    </view>
  </block>

</view>