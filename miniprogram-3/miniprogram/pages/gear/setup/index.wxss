/* pages/gear/entry/index.wxss */
page { 
  background: #F5F7FA; 
  padding: 30rpx; 
  box-sizing: border-box; 
}

/* 极简头部 */
.header-mini {
  margin-bottom: 30rpx;
  display: flex;
  justify-content: space-between;
  align-items: flex-end;
}
.header-title { 
  font-size: 32rpx; font-weight: 900; color: #111; letter-spacing: 1rpx; 
  border-left: 8rpx solid #1976D2; padding-left: 16rpx; line-height: 1;
}
.header-mode { 
  font-size: 20rpx; font-weight: bold; color: #999; background: #E0E0E0; 
  padding: 4rpx 10rpx; border-radius: 4rpx; 
}

/* 1. 顶部操作区 (左右并排) */
.action-row {
  display: flex;
  gap: 20rpx;
  margin-bottom: 20rpx;
  height: 100rpx; /* 控制高度 */
}

/* 左侧主按钮 (扫码/粘贴) */
.action-btn-main {
  flex: 1;
  background: #111;
  border-radius: 8rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 0 30rpx;
  position: relative;
  overflow: hidden;
  box-shadow: 0 6rpx 16rpx rgba(0,0,0,0.15);
}
.action-btn-main:active { transform: scale(0.98); background: #000; }

.icon-box { margin-right: 16rpx; font-size: 36rpx; }
.btn-text-group { display: flex; flex-direction: column; align-items: flex-start; }
.btn-title { color: #fff; font-size: 28rpx; font-weight: bold; line-height: 1.2; }
.btn-sub { color: #666; font-size: 18rpx; font-weight: normal; }

/* 右侧副按钮 (导入知渔码) */
.action-btn-sub {
  flex: 0.8; /* 稍微短一点 */
  background: #fff;
  border: 2rpx solid #111; /* 黑边框风格 */
  border-radius: 8rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #111;
}
.action-btn-sub:active { background: #F0F0F0; }
.sub-title { font-size: 26rpx; font-weight: 800; }

/* 2. 搜索栏 */
.search-box {
  background: #fff;
  border: 1rpx solid #DDD;
  border-radius: 8rpx;
  height: 72rpx; /* 稍微扁一点 */
  display: flex;
  align-items: center;
  padding: 0 20rpx;
  margin-bottom: 40rpx;
}
.search-icon { font-size: 24rpx; margin-right: 16rpx; color: #999; }
.search-input { flex: 1; font-size: 26rpx; color: #333; height: 100%; }
.ph-style { color: #CCC; font-size: 24rpx; }

/* 3. 分类网格系统 */
.catalog-group { margin-bottom: 40rpx; }
.group-header { 
  font-size: 24rpx; font-weight: bold; color: #666; 
  margin-bottom: 16rpx; display: flex; align-items: center;
}
.line-dec { flex: 1; height: 1rpx; background: #E0E0E0; margin-left: 20rpx; }

/* 核心资产专用：2x2 布局 */
.grid-2-col {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 20rpx;
}
.item-card-lg {
  background: #fff;
  border-radius: 8rpx;
  padding: 30rpx;
  display: flex;
  flex-direction: column;
  align-items: flex-start;
  box-shadow: 0 4rpx 10rpx rgba(0,0,0,0.03);
  border-left: 6rpx solid #333; /* 左侧加粗线强调 */
  transition: all 0.2s;
}
.item-card-lg:active { transform: scale(0.98); background: #FAFAFA; }
.lg-name { font-size: 30rpx; font-weight: 900; color: #111; margin-bottom: 6rpx; }
.lg-en { font-size: 20rpx; color: #999; font-weight: bold; text-transform: uppercase; }

/* 其他资产：3x3 布局 */
.grid-3-col {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 20rpx;
}
.item-card-sm {
  background: #fff;
  border: 1rpx solid #EAEAEA;
  border-radius: 8rpx;
  padding: 24rpx 0;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}
.item-card-sm:active { border-color: #1976D2; background: #F0F7FF; }
.sm-name { font-size: 26rpx; font-weight: bold; color: #333; }
.sm-en { font-size: 18rpx; color: #AAA; margin-top: 4rpx; text-transform: uppercase; }

/* 战术模式列表 */
.method-list { display: flex; flex-direction: column; gap: 20rpx; }
.method-item { 
  background: #fff; border: 1rpx solid #EAEAEA; padding: 24rpx 30rpx; 
  border-radius: 8rpx; display: flex; justify-content: space-between; align-items: center;
}
.m-name { font-size: 28rpx; font-weight: bold; color: #111; }
.m-desc { font-size: 22rpx; color: #999; }