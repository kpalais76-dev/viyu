<view class="container">
  
  <view class="header-mini">
    <view class="header-title">{{uiConfig[mode].title}}</view>
    <view class="header-mode">{{mode === 'gear' ? 'ASSETS' : 'TACTICS'}}</view>
  </view>

  <view class="action-row">
    <view class="action-btn" bindtap="handleMainAction">
      <view class="btn-glow"></view>
      <text class="btn-title">{{uiConfig[mode].mainBtn}}</text>
      <text class="btn-sub">{{uiConfig[mode].mainDesc}}</text>
    </view>
    <view class="action-btn" bindtap="handlePaste">
      <view class="btn-glow"></view>
      <text class="btn-title">导入口令</text>
      <text class="btn-sub">IMPORT CODE</text> 
    </view>
  </view>

  <view class="search-section">
    <input 
      class="search-input" 
      placeholder="{{uiConfig[mode].searchHint}}" 
      placeholder-class="ph-style"
      confirm-type="search"
      bindconfirm="handleSearch"
    />
    <view class="search-btn-txt" bindtap="handleSearchBtn">搜 索</view>
  </view>

  <view class="grid-container-wrapper">
    
    <block wx:if="{{mode === 'gear'}}">
      <view class="grid-matrix">
        <view 
          class="grid-item" 
          wx:for="{{gearTypes}}" 
          wx:key="key" 
          bindtap="handleSelectType" 
          data-type="{{item.key}}"
        >
          <text class="grid-idx">0{{index + 1}}</text>
          <text class="item-name">{{item.name}}</text>
          <text class="item-en">{{item.key}}</text>
        </view>
      </view>
    </block>

    <block wx:if="{{mode === 'setup'}}">
      <view class="grid-matrix mode-2x2">
        <view 
          class="grid-item" 
          wx:for="{{methods}}" 
          wx:key="key" 
          bindtap="handleManualSetup" 
          data-key="{{item.key}}"
        >
          <text class="grid-idx">OP-0{{index + 1}}</text>
          <text class="item-name">{{item.name}}</text>
          <text class="item-en">{{item.desc}}</text>
        </view>
      </view>
    </block>

  </view>

</view>