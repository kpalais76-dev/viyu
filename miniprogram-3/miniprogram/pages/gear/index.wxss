/* pages/gear/index.wxss */
page { background-color: #F5F7FA; padding-bottom: 40rpx; }

/* 头部资产卡片 (黑金战术风) */
.header-section { padding: 20rpx 30rpx 0; background: #FFF; }
.asset-card { 
  background: #1A1A1A; 
  border-radius: 20rpx; 
  padding: 40rpx; 
  color: #FFF;
  box-shadow: 0 10rpx 30rpx rgba(0,0,0,0.2); 
}
.asset-row { display: flex; justify-content: space-between; align-items: center; }
.asset-label { font-size: 22rpx; color: #888; letter-spacing: 1rpx; margin-bottom: 10rpx; text-transform: uppercase; }
.asset-value { font-size: 56rpx; font-weight: 900; font-family: sans-serif; letter-spacing: -1rpx; }
.count-num { font-size: 40rpx; font-weight: bold; color: #FFF; }
.count-label { font-size: 22rpx; color: #666; margin-left: 8rpx; }

/* Tab 切换 */
.tab-wrapper { 
  display: flex; background: #FFF; padding: 20rpx 30rpx 0; 
  border-bottom: 1rpx solid #F0F0F0; position: sticky; top: 0; z-index: 10;
}
.tab-item { 
  margin-right: 50rpx; padding-bottom: 24rpx; font-size: 28rpx; 
  color: #999; font-weight: 500; position: relative; transition: all 0.3s;
}
.tab-item.active { color: #000; font-weight: 900; font-size: 30rpx; }
.tab-item.active::after { 
  content: ''; position: absolute; bottom: 0; left: 50%; transform: translateX(-50%); 
  width: 40rpx; height: 6rpx; background: #1976D2; border-radius: 4rpx; 
}

/* 列表区 */
.list-container { padding: 30rpx; }

/* 入库按钮 */
.add-btn-card { margin-bottom: 30rpx; }
.dashed-box { 
  border: 2rpx dashed #CCC; background: #FFF; border-radius: 16rpx; 
  height: 100rpx; display: flex; align-items: center; justify-content: center;
  color: #666; font-size: 28rpx; font-weight: bold; 
}
.plus-icon { font-size: 36rpx; margin-right: 12rpx; color: #1976D2; font-weight: 900; }

/* 装备卡片 */
.gear-card { 
  background: #FFF; border-radius: 16rpx; padding: 30rpx; 
  margin-bottom: 24rpx; display: flex; align-items: center;
  box-shadow: 0 4rpx 12rpx rgba(0,0,0,0.03); border: 1rpx solid #F0F0F0;
}
.type-tag { 
  width: 88rpx; height: 88rpx; border-radius: 16rpx; background: #F8F9FA; 
  display: flex; align-items: center; justify-content: center; 
  font-size: 40rpx; margin-right: 24rpx; flex-shrink: 0; border: 1rpx solid #EEE;
}
.type-tag.setup { background: #333; color: #FFF; font-size: 28rpx; font-weight: 900; }

.card-content { flex: 1; overflow: hidden; }
.card-title { font-size: 30rpx; font-weight: bold; color: #333; margin-bottom: 8rpx; }
.card-subtitle { font-size: 24rpx; color: #999; white-space: nowrap; overflow: hidden; text-overflow: ellipsis; }
.divider { margin: 0 10rpx; color: #DDD; }
.method-badge { 
  font-size: 20rpx; background: #E3F2FD; color: #1976D2; 
  padding: 4rpx 12rpx; border-radius: 6rpx; margin-left: 12rpx; font-weight: bold; 
}
.action-btn { padding: 10rpx; }
.del-icon { color: #CCC; font-size: 32rpx; font-weight: bold; }
.empty-tip { text-align: center; color: #AAA; margin-top: 100rpx; font-size: 26rpx; }