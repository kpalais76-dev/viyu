/* 页面底色 */
page {
  background-color: #f6f7f9;
  box-sizing: border-box;
}

.user-page {
  width: 100%;
  display: block; /* 强制块级布局，防止居中 */
}

/* --- 1. 顶部背景区 --- */
.user-header-bg {
  width: 100%;
  height: 420rpx; /* 高度给足 */
  background: linear-gradient(135deg, #2E7D32 0%, #1B5E20 100%); /* 深绿渐变 */
  padding: 60rpx 40rpx 0 40rpx;
  box-sizing: border-box;
  position: relative;
}

.user-card {
  display: flex;
  align-items: center;
}

/* 头像处理 */
.avatar-box {
  position: relative;
  margin-right: 30rpx;
}
.avatar-border {
  width: 130rpx;
  height: 130rpx;
  border-radius: 50%;
  border: 4rpx solid rgba(255,255,255,0.8);
  overflow: hidden;
  background: #fff;
}
.avatar-img {
  width: 100%;
  height: 100%;
}
.vip-tag {
  position: absolute;
  bottom: 0;
  right: -10rpx;
  background: linear-gradient(90deg, #FFD700, #FFA000);
  color: #333;
  font-size: 20rpx;
  padding: 2rpx 12rpx;
  border-radius: 20rpx;
  font-weight: bold;
  border: 2rpx solid #fff;
}

/* 文字信息 */
.info-box {
  flex: 1;
  color: #fff;
}
.nickname {
  font-size: 40rpx;
  font-weight: bold;
  display: block;
  margin-bottom: 8rpx;
}
.user-id {
  font-size: 24rpx;
  opacity: 0.8;
  background: rgba(0,0,0,0.2);
  padding: 4rpx 16rpx;
  border-radius: 8rpx;
}

.setting-icon {
  font-size: 40rpx;
  color: #fff;
  opacity: 0.8;
}

/* --- 2. 悬浮数据卡片 --- */
.stats-floating-card {
  background: #fff;
  width: 92%; /* 左右留一点空隙 */
  margin: -100rpx auto 0 auto; /* 关键：负边距上移，压住背景 */
  border-radius: 24rpx;
  display: flex;
  padding: 40rpx 0;
  box-shadow: 0 8rpx 24rpx rgba(0,0,0,0.06);
  position: relative;
  z-index: 2;
}

.stat-item {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}
.stat-item.divider {
  border-left: 1rpx solid #f0f0f0;
  border-right: 1rpx solid #f0f0f0;
}

.num {
  font-size: 44rpx;
  font-weight: bold;
  color: #333;
  font-family: 'DIN', sans-serif;
  margin-bottom: 8rpx;
}
.label {
  font-size: 24rpx;
  color: #999;
}

/* --- 3. 菜单列表 --- */
.menu-section {
  padding: 30rpx;
  width: 100%;
  box-sizing: border-box;
}

.menu-group {
  background: #fff;
  border-radius: 20rpx;
  margin-bottom: 24rpx;
  overflow: hidden;
}

.menu-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 32rpx;
  background: #fff;
  border-bottom: 1rpx solid #f9f9f9;
  font-size: 30rpx;
  color: #333;
}
.menu-item:last-child { border-bottom: none; }
.menu-item:active { background-color: #f5f5f5; }

/* 去除 button 默认样式 */
.btn-reset {
  width: 100%;
  font-weight: normal;
  margin: 0;
  line-height: inherit;
  border-radius: 0;
}
.btn-reset::after { border: none; }

.left { display: flex; align-items: center; }
.icon { margin-right: 20rpx; font-size: 36rpx; }
.arrow { color: #ccc; font-size: 26rpx; }

.footer-copyright {
  text-align: center;
  color: #ccc;
  font-size: 22rpx;
  margin-top: 40rpx;
}