page { background-color: #222; color: #fff; } /* 深色模式，强调沉浸感 */
.record-page { padding: 40rpx; width: 100%; box-sizing: border-box; }

.mission-header { margin-bottom: 60rpx; margin-top: 40rpx; }
.date-big .day { font-size: 80rpx; font-weight: 900; color: #4CAF50; display: block; line-height: 1; letter-spacing: -2rpx; font-family: 'DIN', sans-serif;}
.date-big .full-date { font-size: 28rpx; color: #888; margin-top: 10rpx; display: block; }
.weather-pill { display: inline-block; background: rgba(255,255,255,0.1); padding: 8rpx 20rpx; border-radius: 30rpx; margin-top: 30rpx; font-size: 24rpx; color: #ccc; }

.config-card { background: rgba(255,255,255,0.08); border-radius: 24rpx; padding: 30rpx; margin-bottom: 40rpx; border: 1rpx solid rgba(255,255,255,0.1); }
.card-title { font-size: 24rpx; color: #666; margin-bottom: 24rpx; text-transform: uppercase; letter-spacing: 2rpx; }

.config-row { display: flex; justify-content: space-between; align-items: flex-start; margin-bottom: 30rpx; }
.config-row:last-child { margin-bottom: 0; }
.config-row .label { color: #888; font-size: 28rpx; width: 100rpx; }
.value-box { flex: 1; display: flex; flex-direction: column; position: relative; }
.main-val { font-size: 32rpx; font-weight: bold; color: #fff; margin-bottom: 6rpx; }
.sub-val { font-size: 24rpx; color: #666; }
.value-box .arrow { position: absolute; right: 0; top: 0; color: #444; }

.action-grid { display: flex; gap: 30rpx; margin-bottom: 60rpx; }
.action-btn { flex: 1; height: 300rpx; border-radius: 30rpx; display: flex; flex-direction: column; justify-content: center; align-items: center; transition: all 0.2s; }
.action-btn:active { transform: scale(0.98); opacity: 0.9; }

.action-btn.camera { background: linear-gradient(135deg, #4CAF50 0%, #2E7D32 100%); box-shadow: 0 10rpx 30rpx rgba(46, 125, 50, 0.3); }
.action-btn.manual { background: #333; border: 2rpx solid #444; }

.action-btn .icon { font-size: 80rpx; margin-bottom: 20rpx; }
.action-btn .txt { font-size: 32rpx; font-weight: bold; }
.action-btn .sub { font-size: 20rpx; opacity: 0.6; margin-top: 8rpx; }

.draft-section { border-top: 1rpx solid #333; padding-top: 30rpx; }
.section-title { font-size: 24rpx; color: #666; margin-bottom: 20rpx; display: block; }
.draft-item { display: flex; justify-content: space-between; font-size: 28rpx; color: #ccc; background: rgba(0,0,0,0.2); padding: 20rpx; border-radius: 12rpx; }
.draft-item .time { color: #666; margin-right: 20rpx; }
.draft-item .continue { color: #4CAF50; font-size: 24rpx; }