page { background-color: #f6f7f9; }
.discovery-page { display: block; width: 100%; }

/* Banner */
.banner-box { padding: 30rpx; background: #fff; margin-bottom: 20rpx; }
.banner-card {
  height: 240rpx;
  background: linear-gradient(135deg, #1A237E 0%, #3949AB 100%);
  border-radius: 20rpx;
  padding: 40rpx;
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
  justify-content: center;
  position: relative;
  box-shadow: 0 8rpx 20rpx rgba(26, 35, 126, 0.3);
}
.banner-card .tag { position: absolute; top: 20rpx; right: 20rpx; background: rgba(255,255,255,0.2); color: #fff; font-size: 20rpx; padding: 4rpx 12rpx; border-radius: 8rpx; }
.banner-title { font-size: 40rpx; font-weight: bold; color: #fff; margin-bottom: 10rpx; }
.banner-sub { font-size: 26rpx; color: rgba(255,255,255,0.8); }

/* 排行榜 */
.rank-section { background: #fff; padding: 30rpx; margin-bottom: 20rpx; }
.section-header { display: flex; justify-content: space-between; margin-bottom: 30rpx; align-items: center; }
.section-header .title { font-weight: bold; font-size: 32rpx; border-left: 8rpx solid #FFD700; padding-left: 16rpx; }
.section-header .more { font-size: 24rpx; color: #999; }

.chart-row { display: flex; align-items: center; margin-bottom: 20rpx; }
.chart-row .label { width: 80rpx; font-size: 26rpx; color: #666; }
.bar-container { flex: 1; height: 16rpx; background: #f0f0f0; border-radius: 8rpx; overflow: hidden; margin-right: 20rpx; }
.bar { height: 100%; border-radius: 8rpx; }
.val { width: 60rpx; font-size: 24rpx; color: #333; font-weight: bold; text-align: right; }

/* Feed流 */
.feed-list { padding: 30rpx; }
.feed-title { font-size: 28rpx; color: #666; margin-bottom: 20rpx; font-weight: bold; }

.feed-card { background: #fff; padding: 30rpx; border-radius: 20rpx; margin-bottom: 20rpx; box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.02); }
.user-row { display: flex; align-items: center; margin-bottom: 16rpx; }
.avatar { width: 60rpx; height: 60rpx; background: #e0f2f1; border-radius: 50%; margin-right: 16rpx; }
.name { font-size: 28rpx; font-weight: bold; color: #333; flex: 1; }
.time { font-size: 22rpx; color: #ccc; }

.feed-content { font-size: 28rpx; color: #555; line-height: 1.5; margin-bottom: 20rpx; }

.feed-tags { display: flex; gap: 16rpx; }
.feed-tags .tag { background: #f5f5f5; color: #999; font-size: 22rpx; padding: 4rpx 16rpx; border-radius: 8rpx; }