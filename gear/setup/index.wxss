/* pages/gear/setup/index.wxss */
/* ... 保留之前所有的样式 (status-bar, card, footer等) ... */
page { background: #f7f8fa; color: #333; padding-bottom: 120rpx; }
.container { padding: 30rpx; }
.status-bar { display: flex; justify-content: space-between; align-items: center; margin-bottom: 40rpx; }
.page-title { font-size: 40rpx; font-weight: 800; color: #111; letter-spacing: 1rpx; }
.mode-badge { background: #e3f2fd; padding: 10rpx 24rpx; border-radius: 40rpx; display: flex; align-items: center; }
.mode-label { font-size: 22rpx; color: #666; margin-right: 12rpx; }
.mode-val { font-size: 26rpx; color: #1976D2; font-weight: 800; }
.card { background: #fff; border-radius: 24rpx; padding: 0 40rpx; margin-bottom: 30rpx; box-shadow: 0 8rpx 20rpx rgba(0,0,0,0.03); }
.group-title { font-size: 26rpx; color: #666; margin: 0 0 16rpx 20rpx; font-weight: bold; text-transform: uppercase; letter-spacing: 2rpx; }
.form-item { display: flex; justify-content: space-between; align-items: center; padding: 24rpx 0; border-bottom: 1rpx solid #f5f5f5; min-height: 50rpx; }
.form-item:last-child { border-bottom: none; }
.label { font-size: 30rpx; font-weight: 500; color: #333; }
.req { color: #fa5151; margin-left: 6rpx; }
.picker-val { font-size: 30rpx; color: #1976D2; font-weight: 600; display: flex; align-items: center; }
.picker-val.placeholder { color: #ccc; font-weight: normal; }
.arrow { font-size: 20rpx; color: #ccc; margin-left: 10rpx; }
.input-box { flex: 1; text-align: right; font-size: 30rpx; color: #1976D2; font-weight: 600; }
.share-area { margin-top: 40rpx; background: #fff; padding: 30rpx; border-radius: 24rpx; border: 2rpx dashed #dbeafe; }
.share-title { font-size: 26rpx; font-weight: bold; color: #1976D2; margin-bottom: 20rpx; }
.share-btn-row { display: flex; gap: 20rpx; }
.share-btn { flex: 1; height: 80rpx; display: flex; align-items: center; justify-content: center; border-radius: 16rpx; font-size: 28rpx; font-weight: bold; transition: all 0.2s; }
.share-btn.code { background: #f0f7ff; color: #1976D2; border: 1rpx solid #e3f2fd; }
.share-btn.poster { background: #1976D2; color: #fff; box-shadow: 0 6rpx 16rpx rgba(25, 118, 210, 0.25); }
.footer { margin-top: 50rpx; padding: 0 20rpx; }
.btn-save { background: #222; color: #fff; border-radius: 20rpx; font-weight: bold; height: 90rpx; display: flex; align-items: center; justify-content: center; font-size: 32rpx; box-shadow: 0 10rpx 30rpx rgba(0,0,0,0.15); }

