/* --- 重点修复：海报模态框样式 --- */
.poster-modal { 
  position: fixed; top: 0; left: 0; width: 100vw; height: 100vh; 
  z-index: 999; /* 层级调高 */
  display: flex; align-items: center; justify-content: center; 
}

.modal-mask { 
  position: absolute; top: 0; left: 0; width: 100%; height: 100%; 
  background: rgba(0,0,0,0.85); /* 背景更深，突出内容 */
  backdrop-filter: blur(8px); 
}

.modal-content { 
  position: relative; 
  width: 85%; 
  /* 关键修复：限制高度，超出可滚动 */
  max-height: 85vh; 
  overflow-y: auto; 
  
  background: #fff; 
  border-radius: 24rpx; 
  padding: 30rpx; 
  z-index: 1000; 
  display: flex; flex-direction: column; align-items: center; 
  box-shadow: 0 20rpx 60rpx rgba(0,0,0,0.4);
}

.modal-header { font-size: 32rpx; font-weight: 800; color: #333; margin-bottom: 20rpx; flex-shrink: 0; }

.poster-preview { 
  width: 100%; 
  border-radius: 8rpx; 
  box-shadow: 0 4rpx 12rpx rgba(0,0,0,0.1); 
  margin-bottom: 30rpx; 
  border: 1rpx solid #eee;
  /* 图片自身不限制高度，靠外层 scroll */
}

.modal-actions { width: 100%; display: flex; gap: 20rpx; flex-shrink: 0; }
.action-btn { flex: 1; height: 88rpx; border-radius: 16rpx; display: flex; align-items: center; justify-content: center; font-size: 28rpx; font-weight: bold; border: none; }
.action-btn.save { background: #1976D2; color: #fff; }
.action-btn.close { background: #f5f5f5; color: #666; }

.modal-tip { margin-top: 20rpx; font-size: 22rpx; color: #999; flex-shrink: 0; }