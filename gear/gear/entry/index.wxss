/* pages/gear/entry/index.wxss */
page { background: #f6f7f9; color: #333; }
.container { padding: 40rpx; }

.header-section { display: flex; justify-content: space-between; align-items: flex-start; margin-bottom: 50rpx; }
.title { font-size: 48rpx; font-weight: 800; color: #111; margin-bottom: 10rpx; }
.subtitle { font-size: 28rpx; color: #888; letter-spacing: 1rpx; }

.rank-entry { background: #fff0e6; color: #fa541c; padding: 12rpx 24rpx; border-radius: 30rpx; font-size: 24rpx; font-weight: bold; display: flex; align-items: center; }
.rank-entry .arrow { margin-left: 8rpx; font-family: monospace; }

.action-card { background: #fff; border-radius: 32rpx; padding: 60rpx 40rpx; box-shadow: 0 10rpx 40rpx rgba(0,0,0,0.04); margin-bottom: 60rpx; }

/* 主按钮 */
.scan-area { display: flex; flex-direction: column; align-items: center; text-align: center; padding: 20rpx 0; border-radius: 24rpx; transition: all 0.2s; }
.scan-area:active { background: #f9f9f9; transform: scale(0.98); }

.main-text { font-size: 40rpx; font-weight: 800; color: #1976D2; display: block; margin-bottom: 12rpx; }
.sub-text { font-size: 26rpx; color: #999; }

.divider { text-align: center; margin: 50rpx 0; position: relative; }
.divider text { background: #fff; padding: 0 20rpx; color: #ccc; font-size: 24rpx; position: relative; z-index: 1; font-weight: bold; }
.divider::after { content: ""; position: absolute; left: 0; top: 50%; width: 100%; height: 2rpx; background: #f0f0f0; }

.search-box { background: #f5f5f5; height: 100rpx; border-radius: 24rpx; display: flex; align-items: center; padding: 0 30rpx; }
.search-input { flex: 1; margin-left: 10rpx; font-size: 30rpx; height: 100%; font-weight: 500; }

/* 手动录入 */
.manual-entry { text-align: center; font-size: 28rpx; color: #999; }
.manual-entry .link { color: #1976D2; font-weight: bold; margin-left: 10rpx; }

/* 手动组装网格 */
.setup-grid-area { margin-top: 20rpx; }
.grid-title { font-size: 24rpx; color: #999; font-weight: bold; margin-bottom: 30rpx; text-transform: uppercase; letter-spacing: 2rpx; text-align: center;}

.method-grid { display: grid; grid-template-columns: repeat(2, 1fr); gap: 24rpx; }
.method-card { background: #fff; border-radius: 24rpx; padding: 30rpx; display: flex; flex-direction: column; align-items: center; justify-content: center; box-shadow: 0 4rpx 10rpx rgba(0,0,0,0.02); transition: all 0.2s; border: 2rpx solid transparent; min-height: 140rpx; }
.method-card:active { transform: scale(0.96); border-color: #1976D2; }
.m-name { font-size: 32rpx; font-weight: bold; color: #333; margin-bottom: 8rpx; }
.m-desc { font-size: 22rpx; color: #999; }