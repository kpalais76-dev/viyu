/* pages/gear/form/index.wxss */
page { 
  background: #f7f8fa; 
  color: #333; 
  padding-bottom: 100rpx; 
}

.container { padding: 30rpx; }

.form-title { 
  font-size: 36rpx; 
  font-weight: 800; 
  margin: 10rpx 0 30rpx 10rpx; /* 稍微调小一点上边距 */
  color: #111; 
  letter-spacing: 1rpx;
}

/* 卡片容器 */
.card { 
  background: #fff; 
  border-radius: 24rpx; 
  padding: 0 40rpx; /* 上下 padding 交给内部 item 控制，左右保持 */
  margin-bottom: 30rpx; /* 卡片间距也稍微收一点 */
  box-shadow: 0 8rpx 20rpx rgba(0,0,0,0.03); 
}

/* 分组标题 */
.group-title { 
  font-size: 26rpx; 
  color: #666; 
  margin: 0 0 16rpx 20rpx; /* 标题离卡片近一点 */
  font-weight: bold; 
  text-transform: uppercase; 
  opacity: 0.8;
}

/* 表单行 - 核心修改点 */
.form-item { 
  display: flex; 
  justify-content: space-between; 
  align-items: center; 
  padding: 24rpx 0; /* 从 36rpx 调整为 24rpx，紧凑了很多 */
  border-bottom: 1rpx solid #f5f5f5; 
  min-height: 50rpx; /* 最小高度也微调 */
}
.form-item:last-child { border-bottom: none; }

/* 标签 */
.label { 
  font-size: 30rpx; 
  font-weight: 500; 
  color: #333; 
  min-width: 180rpx; 
}

/* 核心数值/输入框 */
.input-box { 
  flex: 1;
  text-align: right; 
  font-size: 30rpx; /* 字号微调，匹配紧凑风格 */
  font-weight: 600; 
  color: #1976D2;   
  height: 100%;
}

/* 选择器显示值 */
.picker-val { 
  font-size: 30rpx; 
  color: #333; 
  font-weight: 600; 
  display: flex; 
  align-items: center;
}
.picker-val.placeholder { 
  color: #ccc; 
  font-weight: normal; 
}

/* 单位 */
.unit { 
  font-size: 26rpx; 
  color: #999; 
  margin-left: 10rpx; 
  font-weight: normal;
  width: 50rpx;
  text-align: right;
}

/* 贡献卡片 */
.share-card { 
  background: #f0f9ff; 
  border: 2rpx solid #e1f0fa; 
  padding: 24rpx 40rpx; /* 这里也同步收紧 */
}
.share-row { 
  display: flex; 
  justify-content: space-between; 
  align-items: center; 
}
.share-title { 
  font-size: 30rpx; 
  font-weight: bold; 
  color: #1976D2; 
}
.share-desc { 
  font-size: 24rpx; 
  color: #666; 
  margin-top: 6rpx; 
  max-width: 450rpx;
  line-height: 1.4;
}

/* 底部按钮 */
.footer { margin-top: 50rpx; padding: 0 20rpx; }
.btn-save { 
  background: #222; 
  color: #fff; 
  border-radius: 20rpx; 
  font-weight: bold; 
  height: 90rpx; /* 按钮高度微调 */
  display: flex; 
  align-items: center; 
  justify-content: center; 
  font-size: 32rpx;
  box-shadow: 0 10rpx 30rpx rgba(0,0,0,0.15); 
  transition: all 0.2s;
}
.btn-save:active { transform: scale(0.98); }