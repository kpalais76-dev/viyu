/* pages/gear/index.wxss */
page { background-color: #f4f5f7; }

/* 头部统计区 */
.header-section { background: #fff; padding: 20rpx 30rpx 0; }
.asset-card { 
  background: linear-gradient(135deg, #2b323a 0%, #1a1f24 100%); 
  border-radius: 24rpx; 
  padding: 40rpx; 
  color: #fff;
  box-shadow: 0 10rpx 30rpx rgba(0,0,0,0.15); 
}
.asset-row { display: flex; justify-content: space-between; align-items: center; }
.asset-label { font-size: 24rpx; color: rgba(255,255,255,0.6); margin-bottom: 10rpx; letter-spacing: 1rpx; }
.asset-value { font-size: 56rpx; font-weight: bold; font-family: sans-serif; }
.asset-count-box { text-align: right; }
.count-num { font-size: 40rpx; font-weight: bold; display: block; }
.count-label { font-size: 22rpx; color: rgba(255,255,255,0.5); }

/* Tab 切换 */
.tab-wrapper { 
  display: flex;
  background: #fff; 
  padding: 20rpx 30rpx 0; 
  border-bottom: 1rpx solid #f0f0f0; 
  position: sticky; 
  top: 0; 
  z-index: 10;
}
.tab-item { 
  margin-right: 50rpx; 
  padding-bottom: 20rpx; 
  font-size: 30rpx; 
  color: #999; 
  font-weight: 500; 
  position: relative; 
}
.tab-item.active { color: #333; font-weight: 800; font-size: 32rpx; }
.tab-item.active::after { 
  content: ''; 
  position: absolute; 
  bottom: 0; 
  left: 50%; 
  transform: translateX(-50%); 
  width: 30rpx;
  height: 6rpx; 
  background: #1976D2; 
  border-radius: 4rpx; 
}

/* 列表区 */
.list-container { padding: 30rpx; }

/* 添加按钮卡片 */
.add-btn-card { margin-bottom: 30rpx; }
.dashed-box { 
  border: 2rpx dashed #ccc; 
  background: #fff; 
  border-radius: 20rpx; 
  height: 100rpx; 
  display: flex; 
  align-items: center; 
  justify-content: center;
  color: #666; 
  font-size: 28rpx; 
  font-weight: bold; 
}
.plus-icon { font-size: 36rpx; margin-right: 10rpx; color: #1976D2; }

/* 装备/套装 卡片 */
.gear-card { 
  background: #fff; 
  border-radius: 20rpx; 
  padding: 30rpx; 
  margin-bottom: 24rpx; 
  display: flex; 
  align-items: center;
  box-shadow: 0 4rpx 10rpx rgba(0,0,0,0.02); 
  position: relative;
}

/* 左侧分类标签 (通用图标模式) */
.type-tag { 
  width: 80rpx; 
  height: 80rpx; 
  border-radius: 20rpx;
  display: flex; 
  align-items: center; 
  justify-content: center; 
  font-size: 40rpx; /* 图标大一点 */
  margin-right: 24rpx; 
  flex-shrink: 0;
}
.type-tag.icon-mode { background: #f8f9fa; border: 1rpx solid #eee; }
.type-tag.setup { background: #333; color: #fff; font-size: 32rpx; font-weight: bold; }

/* 内容区 */
.card-content { flex: 1; overflow: hidden; }
.card-title { font-size: 30rpx; font-weight: bold; color: #333; margin-bottom: 8rpx; display: flex; align-items: center; }
.card-subtitle { font-size: 24rpx; color: #999; white-space: nowrap; overflow: hidden; text-overflow: ellipsis; }
.divider { margin: 0 8rpx; color: #eee; }

.method-badge { font-size: 20rpx; background: #f0f0f0; color: #666; padding: 2rpx 10rpx; border-radius: 6rpx; margin-left: 12rpx; font-weight: normal; }

/* 删除按钮 */
.action-btn { padding: 10rpx 0 10rpx 20rpx; }
.del-icon { color: #ccc; font-size: 28rpx; }

.empty-tip { text-align: center; color: #aaa; margin-top: 60rpx; font-size: 26rpx; }